{% extends "base_admin.html.twig" %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-primary" href="{{ path('adminCreateNew') }}" role="button">Crear Nueva noticia</a>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {% for new in news %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    {#<img src="..." alt="...">#}
                    <div class="caption">
                        <h3>{{ new.title }}</h3>
                        <p>{{ new.date }}</p>
                        <p>{{ new.description  | slice(0,120) | striptags }}</p>
                        <p><a href="{{ path('adminNew', {'id':new.id}) }}" class="btn btn-primary" role="button">Editar</a>
                            <a href="{{ path('adminDeleteNew', {'id':new.id}) }}" class="btn btn-default" role="button">Borrar</a></p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $('.list-group-item').on('click', function(){
            if(!$(this).hasClass('active')){
                $('.list-group-item').removeClass('active');
                $(this).addClass('active');
            }
        });
    </script>

{% endblock %}