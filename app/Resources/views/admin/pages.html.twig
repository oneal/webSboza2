{% extends "base_admin.html.twig" %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-primary" href="{{ path('adminCreatePage') }}" role="button">Crear Nueva pagina</a>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="list-group">
            {% for page in pages %}
                <a href="{{ path('adminPage', {'id': page.id} ) }}" class="list-group-item" id="{{ page.id }}">{{ page.title }}</a>
                <a class="btn btn-info" href="{{ path('adminPage', {'id': page.id} ) }}" role="button">Modificar</a>
                <a class="btn btn-danger" href="{{ path('adminDeletePage', {'id': page.id} ) }}" role="button">Borrar</a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('.list-group-item').on('click', function(){
            if(!$(this).hasClass('active')){
                $('.list-group-item').removeClass('active');
                $(this).addClass('active');
            }
        });
    </script>

{% endblock %}